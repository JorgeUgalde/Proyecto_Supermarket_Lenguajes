@model Category

<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Category</h2>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary " style="width:150px">Save</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"> Return to list</a>

    </div>


</form>