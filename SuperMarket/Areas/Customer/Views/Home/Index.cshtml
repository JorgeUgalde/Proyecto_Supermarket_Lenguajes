@using System.Globalization;
@using SuperMarket.Models;
@model IEnumerable<Product>

<div class="row pb-3">

    @foreach(var product in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <div class="card" style="width:18rem; height:18rem">
                <img class="card-img-top" style="height:160px;width:286px" src="~/@product.PictureUrl">
                <div class="card-block">
                    <p class="card-title h5 text-primary"> @product.Name</p>
                    <p class="card-title text-info">@product.Price.ToString("C", CultureInfo.GetCultureInfo("es-cr"))</p>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary form-control"> Details </a>
                </div>
            </div>
        </div>
    }
</div>

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css">
</head>
<body>
    <div id="modalTest" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <h5>Please enter your name:</h5>
                    <input type="text" id="nameInput">
                    <button id="submitBtn">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/js/bootstrap.min.js"></script>
    <script>
        $(function () {
            alert("Hola");
            $('#modalTest').modal('show');
        });
    </script>
</body>
</html>


