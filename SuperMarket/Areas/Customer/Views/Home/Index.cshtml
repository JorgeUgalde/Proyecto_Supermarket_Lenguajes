@using System.Globalization;
@using SuperMarket.Models;
@model IEnumerable<Product>

<input type="text" id="filterInput" placeholder="Filter products" class="form-control" style="width:50%">
<div class="row pb-3">

    @if (Model != null)
    {


        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mt-4 filtered-product">
                <div class="card" style="width:18rem; height:18rem">
                    <img class="card-img-top" style="height:160px;width:286px" src="~/@product.PictureUrl">
                    <div class="card-block">
                        <p class="card-category">@product.BarCode</p>
                        <p class="card-title h5 text-primary"> @product.Name</p>
                        <p class="card-title text-info">@product.Price.ToString("C", CultureInfo.GetCultureInfo("es-cr"))</p>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary form-control"> Details </a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css">
