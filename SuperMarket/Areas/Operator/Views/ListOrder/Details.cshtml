@model OrderVM

<div class="card  container pt-4">
    <div class="card-header bg-primary text-light ml-0  row ">
        <div class="col-12 col-md-6">
            <h1 class="text-white-50">Details of order #@Model.Order.Id</h1>

        </div>
        <div class="col-12 col-md-6 text-end pt-4">
            @if (@Model.Order.Status == 1)
            {
                <span class="badge bg-warning pt-2" style="height:30px;">Order State: New</span>
            }
            else if (@Model.Order.Status == 2)
            {
                <span class="badge bg-warning pt-2" style="height:30px;">Order State: In progress</span>
            }
            else
            {
                <span class="badge bg-warning pt-2" style="height:30px;">Order State: Finished</span>
            }
        </div>
    </div>
    <div class="card-body row container">
        <div class="container rounded p-2">
            <div class="row">
                <div class="col-8 col-lg-8">
                    <h3>Product list</h3>
                    @foreach(var product in Model.SelectedProducts.ToList())
                    {
                        <p class="card-title h5 text-primary"> @product.Name</p>
                    }
                </div>
                <div class="col-12 col-lg-3 offset-lg-1 text-center">
                    @if (@Model.Order.Status == 1 || @Model.Order.Status == 2)
                    {
                        @*funcionalidad de cambiar estado de la orden*@
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-6 pb-1">
                <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Return</a>
            </div>
        </div>
    </div>
</div>
